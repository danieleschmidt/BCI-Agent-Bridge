# BCI-Agent-Bridge Environment Configuration

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# BCI Hardware Configuration
BCI_DEVICE=Simulation  # Options: Simulation, OpenBCI, Emotiv, NeuroSky, Muse
BCI_CHANNELS=8
BCI_SAMPLING_RATE=250
BCI_PARADIGM=P300  # Options: P300, MotorImagery, SSVEP, Hybrid

# Privacy Configuration
PRIVACY_EPSILON=1.0
PRIVACY_DELTA=1e-5
PRIVACY_MODE=medical  # Options: medical, standard, research

# Database Configuration
POSTGRES_PASSWORD=secure_password_here
DATABASE_URL=postgresql://bci_user:secure_password_here@postgres:5432/bci_database

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Clinical Trial Configuration
IRB_APPROVAL=IRB-2025-0142
PROTOCOL_ID=BCI-LLM-2025-001
CLINICAL_DATA_DIR=./clinical_data

# Monitoring Configuration
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=30d

# API Configuration
API_PORT=8000
WEBSOCKET_PORT=8080
MAX_CONCURRENT_SESSIONS=10
REQUEST_TIMEOUT=30

# Performance Configuration
WORKER_PROCESSES=4
MAX_MEMORY_MB=2048
CACHE_TTL=3600

# Feature Flags
ENABLE_HARDWARE_BCI=false
ENABLE_CLINICAL_MODE=true
ENABLE_PRIVACY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true