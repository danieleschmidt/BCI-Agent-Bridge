# BCI-Agent-Bridge Production Environment Configuration

# Core BCI Settings
BCI_DEVICE=Simulation
BCI_CHANNELS=8
BCI_SAMPLING_RATE=250
BCI_PARADIGM=P300
BUFFER_SIZE=10000

# Claude API Configuration
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096

# Security & Privacy
PRIVACY_EPSILON=1.0
PRIVACY_DELTA=1e-5
SECURITY_POLICY=clinical
ENABLE_AUDIT_LOGGING=true
ENCRYPTION_ENABLED=true

# Performance Settings  
CACHE_SIZE_MB=500
DISTRIBUTED_CACHE_ENABLED=true
AUTO_SCALING_ENABLED=true
MIN_WORKERS=2
MAX_WORKERS=10

# Database Configuration
POSTGRES_DB=bci_database
POSTGRES_USER=bci_user
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
REDIS_URL=redis://redis:6379/0

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}
PROMETHEUS_RETENTION=15d

# API Configuration  
API_HOST=0.0.0.0
API_PORT=8000
WEBSOCKET_PORT=8080
ENABLE_CORS=false
API_RATE_LIMIT=100

# Clinical Compliance
HIPAA_COMPLIANCE=true
GDPR_COMPLIANCE=true
CLINICAL_AUDIT=true
DATA_RETENTION_DAYS=2555  # 7 years

# Deployment Settings
ENVIRONMENT=production
VERSION=1.0.0
DEPLOYMENT_MODE=high_availability
HEALTH_CHECK_INTERVAL=30s